<Window x:Class="RecipeManager.AddStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeManager"
        mc:Ignorable="d"
         Title="Add Step" Height="200" Width="300">
    <Grid Margin="10" Background="DarkGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="StepDescription" Margin="5" ToolTip="Step Description" /> 
        

        <Button Content="Add" Grid.Row="1" HorizontalAlignment="Center" Click="AddButton_Click" Margin="5" Background="MistyRose"/>
    </Grid>
</Window>